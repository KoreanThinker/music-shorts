{
  "name": "functions",
  "private": true,
  "scripts": {
    "build": "tsc",
    "serve": "npm run firebase:config && tsc && firebase serve --only functions",
    "firebase:config":"firebase functions:config:get > .runtimeconfig.json",
    "deploy": "npm run build && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint --ext .js,.ts .",
    "test": "npm run test:service && npm run test:api",
    "test:api": "NODE_ENV=test mocha --reporter spec test/api/*.test.ts -r ts-node/register --timeout 15000 --bail",
    "test:service": "NODE_ENV=test mocha --reporter spec test/service/*.test.ts -r ts-node/register --timeout 10000 --bail"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^10.0.1",
    "firebase-functions": "^3.16.0",
    "spotify-web-api-node": "^5.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^10.0.6",
    "@types/spotify-web-api-node": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "chai": "^4.3.4",
    "dotenv": "^11.0.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-functions-test": "^0.3.3",
    "sinon": "^12.0.1",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "puppeteer": "^13.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
