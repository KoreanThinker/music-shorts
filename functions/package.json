{
  "name": "functions",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",
    "test": "npm run test:api",
    "test:api": "NODE_ENV=test mocha --reporter spec test/api/*.test.ts -r ts-node/register --timeout 10000",
    "test:service":"NODE_ENV=test mocha --reporter spec test/service/*.test.ts -r ts-node/register --timeout 10000",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build && firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^10.0.1",
    "firebase-functions": "^3.16.0",
    "sinon": "^12.0.1",
    "spotify-web-api-node": "^5.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^10.0.6",
    "@types/spotify-web-api-node": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^11.0.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^4.0.0",
    "firebase-functions-test": "^0.3.3",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "puppeteer": "^13.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^3.8.0"
  }
}
